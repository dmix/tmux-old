# This tmux statusbar config was created by tmuxline.vim
# on Sun, 07 Feb 2016

set -g status-bg "colour236"
set -g message-command-fg "colour234"
set -g status-justify "centre"
set -g status-left-length "100"
set -g status "on"
set -g pane-active-border-fg "colour7"
set -g message-bg "colour7"
set -g status-right-length "100"
set -g status-right-attr "none"
set -g message-fg "colour234"
set -g message-command-bg "colour7"
set -g status-attr "none"
set -g status-utf8 "on"
set -g pane-border-fg "colour236"
set -g status-left-attr "none"
setw -g window-status-fg "colour7"
setw -g window-status-attr "none"
setw -g window-status-activity-bg "colour236"
setw -g window-status-activity-attr "underscore"
setw -g window-status-activity-fg "colour7"
setw -g window-status-separator ""
setw -g window-status-bg "colour236"
set -g status-left "#[fg=colour7,bg=colour236] #S #[fg=colour236,bg=colour236,nobold,nounderscore,noitalics]#[fg=colour7,bg=colour236] #W #[fg=colour236,bg=colour236,nobold,nounderscore,noitalics]#[fg=colour7,bg=colour236] #H #[fg=colour236,bg=colour236,nobold,nounderscore,noitalics]"
set -g status-right "#[fg=colour236,bg=colour236,nobold,nounderscore,noitalics]#[fg=colour7,bg=colour236] %a #[fg=colour236,bg=colour236,nobold,nounderscore,noitalics]#[fg=colour7,bg=colour236] #W %R #[fg=colour236,bg=colour236,nobold,nounderscore,noitalics]#[fg=colour7,bg=colour236] #H "
setw -g window-status-format "#[fg=colour236,bg=colour236,nobold,nounderscore,noitalics]#[default] #I #W #[fg=colour236,bg=colour236,nobold,nounderscore,noitalics]"
setw -g window-status-current-format "#[fg=colour236,bg=colour7,nobold,nounderscore,noitalics]#[fg=colour234,bg=colour7] #I #W #[fg=colour7,bg=colour236,nobold,nounderscore,noitalics]"
